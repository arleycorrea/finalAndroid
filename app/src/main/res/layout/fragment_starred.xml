<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ingsistemas"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/buttonFragmentStarred"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/textViewStarredFragment"
        android:layout_marginBottom="130dp"
        android:layout_above="@+id/buttonFragmentStarred"
        android:layout_centerHorizontal="true" />



    <Button
        android:textColor="@android:color/white"
        android:backgroundTint="@color/md_green_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRAR "
        android:id="@+id/buttonFragmentStarred"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />






</RelativeLayout>